footer
	padding-top: 5em

@media (max-width: 768px)
	.navbar
		position: relative

	.position-top
		position: absolute


	.main-padding-top
		padding-top: 10em

	.design-forside-2 .sell-content .block span
		font-size: 2em
		vertical-align: middle

	.design-forside-2 .sell-content .block button.btn.btn-primary
		font-size: 1.2em


	.design-forside-2 .video-text
