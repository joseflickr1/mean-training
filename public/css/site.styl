/* design */
.design-play #video-design-play
	width: 100%

.design-play .video-wrapper
	position: relative
	font-family: 'Roboto', serif


.design-play .video-wrapper .sell-content .block H1, 
.design-play .video-wrapper .video-text .block H1	
	font-size: 4em
	margin: auto 50px

.design-play .video-wrapper .sell-content .block H2, 
.design-play .video-wrapper .video-text .block H2	
	font-size: 3em
	margin: 27px 0

.design-play .video-wrapper .sell-content .block p,
.design-play .video-wrapper .video-text .block p	
	font-size: 2em
	margin: auto 50px	



.design-play .video-wrapper .video-text
	position: absolute
	top: 8em
	width: 47%
	height: 0
	left: 0
	color: #fff


.design-play .video-wrapper .sell-content
	position: absolute;
	top: 5em;
	width: 33em;
	height: 0;
	right: 8em;

.design-play .video-wrapper .sell-content .block
	padding: 32px
	margin: 0 0 30px 0
	background-color: #eee


.design-play .video-wrapper .sell-content .block button.btn.btn-primary
	font-size: 14px
	margin-left: 20px
	background-color: rgb(70, 119, 174)
	border: none



