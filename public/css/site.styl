		font-size: 1.6em		


	.design-forside-2 .video-text .block-img img
		height: 180px

	.design-forside-2 .video-text .block-img
		top: 25px
		right: 10%
	

	.design-forside-2 .sell-content
		padding: 0 1em

	.design-forside-2 .sell-content .block
		background-color: #fff
		width: 220px
		border-right: 1px solid #eee
		margin-left: .3em


	.design-forside-2 .sell-content .block H1, 
	.design-forside-2 .video-text .block H1	
		font-size: 3em

	.design-forside-2 .sell-content .block H2, 
	.design-forside-2 .video-text .block H2	
		line-height: 68px
		font-size: 3em
		margin: 0		
		background: #000000 /* Old browsers */
		background: -moz-linear-gradient(left,  #000000 82%, #ffffff 84%) /* FF3.6+ */
		background: -webkit-gradient(linear, left top, right top, color-stop(82%,#000000), color-stop(84%,#ffffff)) /* Chrome,Safari4+ */
		background: -o-linear-gradient(left,  #000000 82%,#ffffff 84%) /* Opera 11.10+ */
		background: -ms-linear-gradient(left,  #000000 82%,#ffffff 84%) /* IE10+ */
		background: linear-gradient(to right,  #000000 82%,#ffffff 84%) /* W3C */

		-webkit-background-clip: text
		-webkit-text-fill-color: transparent





