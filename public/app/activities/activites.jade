.container

	.row
		.col-md-offset-3.col-md-6

			textarea.col-md-12

			form.form-horizontal(name="addActivityForm")
				.form-group
					label.col-md-2.control-label(for="activityName") 
						h1 Aktivitet
					.col-md-10
						input.form-control(name="activityName", type="activityName", placeholder="aktivitet", ng-model="activityName", required)
				
				.form-group
					.col-md-10.col-md-offset-2
						.pull-right
							button.btn.btn-primary(ng-click="add()") Legg til
							| &nbsp;
							a.btn.btn-default(href="/") Avbryt	


	.row
		.col-md-offset-3.col-md-6
			//- a(href="/addactivity") + legg til
			ul.list-group
				li.list-group-item(ng-repeat="activity in activities | filter:query | orderBy: 'created':true | limitTo:10" ) 
					{{activity.activityName}}	{{activity.userId.lastName}} {{getTimeAgo(activity.created)}}

	div(ng-include="'/partials/courses/course-list'")

